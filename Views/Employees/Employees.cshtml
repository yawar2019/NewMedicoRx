@model IEnumerable<NewMedicoRx.Models.RegistrationModel>

@{
    ViewBag.Title = "Employees";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Registration", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-responsive" id="example">
   
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emalid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emalid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>

                <td>
                    @{var Role = item.RoleId == 1 ? "Admin" : "Employee";}@Role
                </td>

                <td>
                    @{var Status = item.status == true ? "Active" : "In Active";}@Status


                </td>
                <td>
                    @Html.ActionLink("Edit", "EditRegistration", new { id = item.EmpId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Details", "DetailsRegistration", new { id = item.EmpId }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "DeleteRegistration", new { id = item.EmpId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
                        }

    </tbody>


</table>


<script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>